			<scope>system</scope>
			<systemPath>${project.basedir}/no-maven-library/bcs-sdk-java_1.4.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
