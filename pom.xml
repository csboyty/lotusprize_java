		<com.google.guava.version>16.0.1</com.google.guava.version>
		<com.fasterxml.jackson.version>2.3.1</com.fasterxml.jackson.version>
		<com.mysql.connector-java.version>5.1.29</com.mysql.connector-java.version>
		<javax.servlet.version>3.1.0</javax.servlet.version>
		<javax.mail.version>1.4.3</javax.mail.version>
		<jedis.version>2.2.1</jedis.version>
